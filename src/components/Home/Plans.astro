---
import { getTranslations, type Language } from '../../i18n';

interface Props {
	lang?: Language;
}

const { lang = 'es' } = Astro.props;
const t = getTranslations(lang);
---

<div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-8">
    <!-- Basic Plan -->
    <div
        class="bg-white p-10 rounded-3xl border-2 border-slate-100 card-shadow"
    >
        <h3 class="text-2xl font-bold mb-2">{t.home.plans.basicName}</h3>
        <p class="text-slate-500 mb-6">{t.home.plans.basicDescription}</p>
        <div class="text-4xl font-extrabold mb-8">{t.home.plans.basicPrice}</div>
        <ul class="space-y-4 mb-10 text-left">
            <li class="flex items-center gap-2">
                <span class="text-green-500">✓</span> {t.home.plans.basicFeature1}
            </li>
            <li class="flex items-center gap-2">
                <span class="text-green-500">✓</span> {t.home.plans.basicFeature2}
            </li>
            <li class="flex items-center gap-2">
                <span class="text-green-500">✓</span> {t.home.plans.basicFeature3}
            </li>
        </ul>
    </div>
    <!-- Max Plan -->
    <div
        class="bg-[#18202E] text-white p-10 rounded-3xl relative overflow-hidden card-shadow scale-105"
    >
        <h3 class="text-2xl font-bold mb-2">{t.home.plans.maxName}</h3>
        <p class="text-slate-400 mb-6">{t.home.plans.maxDescription}</p>
        <div class="text-4xl font-extrabold mb-8">
            $7.99<span class="text-lg font-normal text-slate-400">{t.home.plans.maxPriceUnit}</span>
        </div>
        <ul class="space-y-4 mb-10 text-left">
            <li class="flex items-center gap-2">
                <span class="text-[#D9625E] font-bold">✓</span> {t.home.plans.maxFeature1}
            </li>
            <li class="flex items-center gap-2">
                <span class="text-[#D9625E] font-bold">✓</span> {t.home.plans.maxFeature2}
            </li>
            <li class="flex items-center gap-2">
                <span class="text-[#D9625E] font-bold">✓</span> {t.home.plans.maxFeature3}
            </li>
            <li class="flex items-center gap-2">
                <span class="text-[#D9625E] font-bold">✓</span> {t.home.plans.maxFeature4}
            </li>
        </ul>
    </div>
</div>
