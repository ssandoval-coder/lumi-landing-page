---
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";
---

<Layout>
	<main class="min-h-screen flex items-center justify-center p-8">
		<section class="text-center bg-white/90 px-10 py-14 rounded-[32px] shadow-[0_25px_70px_rgba(29,44,75,0.15)] space-y-6">
			<h1 class="text-[3em] text-[#333] mb-2">Lumi</h1>
			<h2 class="text-[2em] font-light text-[#666]">Próximamente</h2>
			<p class="text-[1.2em] text-[#888] mt-4">Estamos trabajando en algo increíble</p>
		</section>
	</main>
</Layout>
