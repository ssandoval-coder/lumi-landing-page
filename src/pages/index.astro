---
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";
---

<Layout>
	<script is:inline>
		const supported = ['es', 'en', 'pt'];
		const browserLang = (navigator.language || navigator.languages[0] || 'es').substring(0, 2).toLowerCase();
		const lang = supported.includes(browserLang) ? browserLang : 'es';
		window.location.replace('/' + lang + '/');
	</script>
</Layout>
