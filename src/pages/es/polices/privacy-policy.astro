---
import Layout from '../../../layouts/Layout.astro';
import LanguageSelector from '../../../components/LanguageSelector.astro';
import Footer from '../../../components/Footer.astro';
import { getTranslations } from '../../../i18n';
import "../../../styles/global.css";

const currentLang = 'es';
const t = getTranslations(currentLang);
const currentPath = Astro.url.pathname;
---

<Layout lang={currentLang} title={`${t.privacyPolicy.title} - Lumi`}>
	<main class="min-h-screen flex flex-col justify-start items-center p-6 sm:p-10">
		<div class="w-full max-w-4xl bg-white rounded-[28px] shadow-[0_20px_60px_rgba(15,30,60,0.1)] px-6 sm:px-12 py-10 flex flex-col gap-6">
			<div class="flex justify-between items-start">
				<p class="text-xs sm:text-sm uppercase tracking-[0.3em] text-[#8c8f98]">{t.common.polices}</p>
				<LanguageSelector currentLang={currentLang} currentPath={currentPath} />
			</div>
			<h1 class="text-3xl font-semibold text-[#1c1c1e]">{t.privacyPolicy.title}</h1>
			<p class="text-base text-[#5b5f69] leading-relaxed">
				{t.privacyPolicy.description}
			</p>

			<section class="grid gap-6 sm:grid-cols-2">
				<article class="border border-[#eef0f5] rounded-2xl p-6 bg-[#fafbff] space-y-2">
					<h2 class="text-xl font-semibold text-[#1c1c1e]">{t.common.android}</h2>
					<p class="text-[#6d717e]">
						{t.privacyPolicy.androidDescription}
					</p>
				</article>
				<article class="border border-[#eef0f5] rounded-2xl p-6 bg-[#fafbff] space-y-2">
					<h2 class="text-xl font-semibold text-[#1c1c1e]">{t.common.ios}</h2>
					<p class="text-[#6d717e]">
						{t.privacyPolicy.iosDescription}
					</p>
				</article>
			</section>
		</div>
	</main>
	<Footer lang={currentLang} />
</Layout>
